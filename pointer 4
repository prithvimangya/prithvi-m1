#include <stdio.h>

int main() {
    int arr[] = {1, 2, 3, 4, 5}; // Declare and initialize an array
    int *ptr = arr;  // Pointer to the first element of the array

    printf("Array elements using pointer:\n");

    // Loop through the array using pointer arithmetic
    for (int i = 0; i < 5; i++) {
        printf("Element at index %d: %d\n", i, *(ptr + i));  // Dereference ptr + i to get array elements
    }

    return 0;
}
