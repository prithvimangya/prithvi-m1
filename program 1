#include<stdio>
int main()
{
    int n, i, *ptr, sum = 0;
    printf("Enter number of elements: ");
    scanf("%d",&n);
    ptr = (int*) malloc(n * sizeof(int));
    if (ptr == NULL)
    {
        printf("Memory not allocated!\n");
        return 1;
        
    }
    printf("Enter elements:\n");
    for(i = 0; i< n; i++)
    {
        scanf("%d", ptr + i);
        SUM += *(ptr + i);
    }
    printf("Sum = 5d\n", sum);
    free(ptr);
    
    return 0;
}
